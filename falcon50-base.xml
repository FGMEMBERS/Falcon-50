<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim  include="Nasal/views.xml">

    <author>Emmanuel BARANGER (3D/FDM)</author>
    <status>development</status>

    <fuel-fraction>1.0</fuel-fraction>

    <model>
      <path>Aircraft/Falcon-50/Models/falcon50.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <startup>
      <splash-texture>Aircraft/Falcon-50/falcon50-splash.png</splash-texture>
    </startup>

    <sound>
      <audible>true</audible>
      <path>Aircraft/Falcon-50/Sounds/falcon50-sound.xml</path>
    </sound>

    <flaps>
      <setting> 0.00 </setting> <!-- cruise   -->
      <setting> 0.40 </setting> <!-- slat only -->
      <setting> 0.65 </setting> <!-- slat + 20° flap -->
      <setting> 1.00 </setting> <!-- slat + 48° flap  -->
    </flaps>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                      <!-- 0 immat -->
        <int type="int" n="1">  0 </int>                                      <!-- 1 immat -->
        <int type="int" n="2">  0 </int>                                      <!-- 2 immat -->
        <int type="int" n="3">  0 </int>                                      <!-- 3 immat -->
        <int type="int" n="4">  0 </int>                                      <!-- 4 immat -->
        <int type="int" n="5">  0 </int>                                      <!-- 5 immat -->
        <int type="bool" n="6"> 1 </int>                                      <!-- 6 smoke/bomb/torpedo -->
        <int type="int" n="7">  0 </int>                                      <!-- 7 color -->
        <int n="8" alias="/systems/electrical/outputs/nav-lights">  0 </int>  <!-- 8 nav-lights -->
        <int n="9" alias="/sim/model/lights/beacon/state">  false </int>      <!-- 9 strobe-lights -->
        <int n="10" alias="/controls/electric/key-pos">  0 </int>             <!-- 10 key position -->
        <float n="2" alias="/position/gear-agl-m">  0 </float>                <!-- 11 altitude for MP shadow -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>  
      </generic>
    </multiplay>

    <help>
      <title>Falcon 50</title>
      <key>
        <name>Delete</name>
        <desc>toggle thrust reversers</desc>
      </key>
      <key>
        <name>d</name>
        <desc>Open/Close crew doors</desc>
      </key>
      <key>
        <name>j/k</name>
        <desc>Spoilers</desc>
      </key>
    </help>

    <menubar include="Dialogs/falcon50-menu.xml"/>

  </sim>

  <engines>
    <engine n="0">
      <running>true</running>
    </engine>
    <engine n="1">
      <running>true</running>
    </engine>
    <engine n="2">
      <running>true</running>
    </engine>
  </engines>

  <consumables>
    <fuel>
      <tank n="0">
        <name>Right wing</name>
        <level-gal_us archive="y">1250</level-gal_us>
      </tank>
      <tank n="1">
        <name>Left wing</name>
        <level-gal_us archive="y">1250</level-gal_us>
      </tank>
    </fuel>
  </consumables>

  <input>
    <keyboard include="Nasal/falcon50-keyboard.xml"/>
  </input>

  <instrumentation>
    <radar>
      <enabled type="bool">true</enabled>
      <az-field type="double">120</az-field>
      <range type="double">160</range>
      <range-selected type="double">40</range-selected>
      <display-rdr type="bool">true</display-rdr>
      <radar-standby type="int">0</radar-standby>
      <mode>
        <rws type="bool">true</rws>
        <tws-auto type="bool">false</tws-auto>
      </mode>
    </radar>
    <radar2>
      <sweep-width-m type="double">0.0844</sweep-width-m>
      <range-width-m type="double">0.0846</range-width-m>
      <radius-ppi-display-m type="double">0.0846</radius-ppi-display-m>
      <hud-eye-dist-m type="double">0.766</hud-eye-dist-m>
      <hud-radius-m type="double">0.071</hud-radius-m>
      <hud-vertical-offset-m type="double">-0.025</hud-vertical-offset-m>
    </radar2>
    <rwr>
      <display-lighting-intens type="double">0.4</display-lighting-intens>
      <symbology-lighting-intens type="double">1</symbology-lighting-intens>
    </rwr>
    <ecm>
      <on-off type="bool">true</on-off>
    </ecm>
  </instrumentation>

  <nasal>
    <doors>
      <file>Aircraft/Falcon-50/Nasal/doors.nas</file>
    </doors>
    <falcon50>
      <file>Aircraft/Falcon-50/Nasal/liveries.nas</file>
      <file>Aircraft/Falcon-50/Nasal/light.nas</file>
    </falcon50>
    <radar>
      <file>Aircraft/Instruments-3d/radar2/radar2.nas</file>
    </radar>
    <radardist>
      <file>Aircraft/Instruments-3d/radardist/radardist.nas</file>
    </radardist>
    <rwr>
      <file>Aircraft/Falcon-50/Models/Interior/Panel/Instruments/rwr/rwr.nas</file>
    </rwr>
  </nasal>

</PropertyList>

